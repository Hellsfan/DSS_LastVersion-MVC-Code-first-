@model IEnumerable<DSS_LastVersion.Models.Mission>

@{
    ViewData["Title"] = "Index";
}

<h1>Missions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MissionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MissionLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Target)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MissionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MissionLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Target)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MissionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MissionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MissionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
