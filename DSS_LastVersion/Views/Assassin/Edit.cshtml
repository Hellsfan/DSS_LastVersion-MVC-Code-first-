@model DSS_LastVersion.Models.Assassin

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Assassin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssassinID" />
            <div class="form-group">
                <label asp-for="AssassinName" class="control-label"></label>
                <input asp-for="AssassinName" class="form-control" />
                <span asp-validation-for="AssassinName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssassinRank" class="control-label"></label>
                <select asp-for="AssassinRank" class="form-control">
                           <option value="0">Novice</option>
                    <option value="1">Spy</option>
                    <option value="2">Dispatcher</option>
                    <option value="3">Master</option>
                    <option value="4">Leader</option>
                </select>
                <span asp-validation-for="AssassinRank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brotherhoods" class="control-label"></label>
                <select asp-for="BrotherhoodID" class="form-control" asp-items="ViewBag.BrotherhoodId"></select>
                <span asp-validation-for="BrotherhoodID" class="text-danger"></span>
            </div>

              <div class="form-group">
                        <label asp-for="image" class="control-label">Full image address</label>
                        <input asp-for="image" class="form-control" />
                        <span asp-validation-for="image" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
