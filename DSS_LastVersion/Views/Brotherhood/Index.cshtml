@model IEnumerable<DSS_LastVersion.Models.Brotherhood>

@{
    ViewData["Title"] = "Index";
}

<h1>Brotherhoods</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrotherhoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrotherhoodLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrotherhoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrotherhoodLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BrotherhoodId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BrotherhoodId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BrotherhoodId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
